---
import { getEntries } from "astro:content";

export const prerender = false;

const [ios, android] = await getEntries([
  { collection: "links", id: "download-ios" },
  { collection: "links", id: "download-android" },
]);

if (!ios || !android) {
  throw new Error("Missing download links");
}

// Get the path parameter from the URL (e.g., /mobile?path=/restaurant/123)
const path = Astro.url.searchParams.get("path") || "";
const deeplink = `resx://${path}`;

// Android Intent URL - this can sometimes bypass in-app browser restrictions
const intentUrl = `intent://${path}#Intent;scheme=resx;package=com.resx.nyc;end`;

// For iOS, we'll try multiple methods
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="apple-itunes-app" content="app-id=6444920738" />
    <title>Opening ResX...</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        font-family:
          -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        background: #191919;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
      }
      .container {
        text-align: center;
        padding: 2rem;
      }
      .spinner {
        border: 3px solid rgba(255, 255, 255, 0.1);
        border-top: 3px solid #ffd9a1;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        animation: spin 1s linear infinite;
        margin: 0 auto 1.5rem;
      }
      @keyframes spin {
        0% {
          transform: rotate(0deg);
        }
        100% {
          transform: rotate(360deg);
        }
      }
      h1 {
        font-size: 1.5rem;
        margin: 0 0 0.5rem;
        font-weight: 600;
      }
      p {
        color: rgba(255, 255, 255, 0.6);
        margin: 0 0 1.5rem;
      }
      .button {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        background: #ffd9a1;
        color: #191919;
        text-decoration: none;
        border-radius: 9999px;
        font-weight: 600;
        transition: opacity 0.2s;
      }
      .button:hover {
        opacity: 0.9;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="spinner"></div>
      <h1>Opening ResX...</h1>
      <p>Tap below to open the app</p>
      <a href={deeplink} class="button" id="manualOpen">Open ResX App</a>

      <iframe id="hiddenIframe" style="display:none"></iframe>

      <script
        is:inline
        define:vars={{
          deeplink,
          intentUrl,
          iosUrl: ios.data.url,
          androidUrl: android.data.url,
        }}
      >
        // Detect if user is on iOS or Android
        const isIOS = /iPad|iPhone|iPod/.test(navigator.userAgent);
        const isAndroid = /Android/.test(navigator.userAgent);
        const isInstagram = /instagram/i.test(navigator.userAgent);

        let timeout;
        let hasTriedOpening = false;

        function tryOpenApp() {
          if (hasTriedOpening) return;
          hasTriedOpening = true;

          // If in Instagram, skip deeplink and go straight to store
          if (isInstagram) {
            if (isIOS) {
              window.location.href = iosUrl;
            } else if (isAndroid) {
              window.location.href = androidUrl;
            } else {
              window.location.href = "/download";
            }
            return;
          }

          // For normal browsers, try deeplink first
          const iframe = document.getElementById("hiddenIframe");

          if (isAndroid) {
            // Android: Try intent URL first (can bypass some in-app browser restrictions)
            try {
              window.location.href = intentUrl;
            } catch (e) {
              // Fallback to regular deeplink
              iframe.src = deeplink;
              setTimeout(() => {
                window.location.href = deeplink;
              }, 25);
            }
          } else {
            // iOS: Try multiple methods
            try {
              // Method 1: iframe
              iframe.src = deeplink;

              // Method 2: Direct location change
              setTimeout(() => {
                window.location.href = deeplink;
              }, 25);

              // Method 3: Create invisible link and click it
              setTimeout(() => {
                const link = document.createElement("a");
                link.href = deeplink;
                link.style.display = "none";
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
              }, 50);
            } catch (e) {
              window.location.href = deeplink;
            }
          }

          // Set a timeout to redirect to app store if deeplink fails
          timeout = setTimeout(() => {
            if (isIOS) {
              window.location.href = iosUrl;
            } else if (isAndroid) {
              window.location.href = androidUrl;
            } else {
              window.location.href = "/download";
            }
          }, 2500);

          // Cancel store redirect if app opened
          window.addEventListener("blur", () => {
            clearTimeout(timeout);
          });

          document.addEventListener("visibilitychange", () => {
            if (document.hidden) {
              clearTimeout(timeout);
            }
          });
        }

        // Auto-open for all browsers (including Instagram)
        window.addEventListener("load", () => {
          setTimeout(tryOpenApp, 100);
        });

        // Manual button click handler (backup)
        document.getElementById("manualOpen").addEventListener("click", (e) => {
          e.preventDefault();
          tryOpenApp();
        });
      </script>
    </div>
  </body>
</html>
